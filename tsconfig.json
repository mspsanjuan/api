{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "allowUnusedLabels": false,
        "baseUrl": ".",
        "paths": {
            "@andes/event-bus/*": [
                "./packages/event-bus/*"
            ],
            "@andes/mongoose-plugin-audit/*": [
                "./packages/mongoose-plugin-audit/*"
            ],
            "@andes/fhir/*": [
                "./packages/fhir/*"
            ],
            "@andes/drive/*": [
                "./packages/drive/*"
            ],
            "@andes/georef/*": [
                "./packages/georef/*"
            ],
            "@andes/fuentes-autenticas/*": [
                "./packages/fuentes-autenticas/*"
            ],
            "@andes/query-builder/*": [
                "./packages/query-builder/*"
            ],
            "@andes/mpi/*": [
                "./core_v2/mpi/*"
            ],
            "@andes/api/*": [
                "./packages/api/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "./packages/*",
        ]
    }
}